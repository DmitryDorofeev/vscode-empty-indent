{
    "name": "smart-indent",
    "description": "Makes indentation easier to read",
    "version": "0.0.1",
    "publisher": "oderwat",
    "author": {
        "name": "Dmitry Dorofeev"
    },
    "license": "MIT",
    "engines": {
        "vscode": "0.10.x"
    },
    "repository": {
        "url": "https://github.com/DmitryDorofeev/vscode-smart-indent.git",
        "type": "git"
    },
    "bugs": {
        "url": "https://github.com/oderwat/vscode-smart-indent/issues"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Smart-Indent configuration",
            "properties": {
                "smartIndent.removeIndent": {
                    "type": "boolean",
                    "default": true,
                    "description": "Automatically remove indentation in empty lines on save"
                },
                
                "smartIndent.highlightIndent": {
                    "type": "boolean",
                    "default": false,
                    "description": "Highlight indent on empty lines"
                }
            }
        }
    },
    "main": "./out/extension",
    "scripts": {
        "vscode:prepublish": "node ./node_modules/vscode/bin/compile",
        "compile": "node ./node_modules/vscode/bin/compile -watch -p ./"
    },
    "devDependencies": {
        "vscode": "0.10.x",
        "typescript": "^1.6.2"
    }
}
